<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.offline.LocalActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens38"
        android:background="@color/common_black_alpha_cc">

        <ImageView
            android:layout_width="@dimen/dimens60"
            android:layout_height="match_parent"
            android:onClick="back"
            android:padding="@dimen/dimens7"
            android:src="@drawable/back_drawable"
            android:background="@drawable/back_background"
            tools:ignore="OnClick" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimens38"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="已下载地图"
            android:textColor="@color/white"
            android:textSize="@dimen/dimens18" />


    </RelativeLayout>

    <ListView
        android:id="@+id/locallist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>
</LinearLayout>