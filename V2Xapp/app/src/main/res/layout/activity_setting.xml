<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.offline.SettingActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens38"
        android:background="@color/common_black_alpha_cc">

        <ImageView
            android:layout_width="@dimen/dimens60"
            android:layout_height="match_parent"
            android:onClick="setBack"
            android:padding="@dimen/dimens7"
            android:src="@drawable/back_drawable"
            android:background="@drawable/back_background"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimens38"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="设置"
            android:textColor="@color/white"
            android:textSize="@dimen/dimens18" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimens38"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:onClick="offline"
            android:paddingLeft="@dimen/dimens10"
            android:paddingRight="@dimen/dimens10"
            android:text="离线地图"
            android:background="@drawable/back_background"
            android:textColor="@drawable/main_text_bg"
            android:textSize="@dimen/dimens18" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimens42"
                android:text="红灯时间："
                android:textColor="@color/red"
                android:textSize="@dimen/dimens25" />

            <EditText
                android:layout_width="@dimen/dimens80"
                android:paddingRight="@dimen/dimens10"
                android:layout_height="@dimen/dimens42"
                android:singleLine="true"
                android:id="@+id/edit_red"
                android:maxLength="6"
                android:inputType="number" />

            <TextView
                android:layout_width="@dimen/dimens80"
                android:layout_height="@dimen/dimens42"
                android:layout_marginLeft="@dimen/dimens10"
                android:background="@drawable/back_background"
                android:gravity="center"
                android:id="@+id/text_red"
                android:text="完成"
                android:textColor="@drawable/main_text_bg" />

        </LinearLayout>  <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimens42"
                android:text="绿灯时间："
                android:textColor="@color/spring_green"
                android:textSize="@dimen/dimens25" />

            <EditText
                android:layout_width="@dimen/dimens80"
                android:paddingRight="@dimen/dimens10"
                android:layout_height="@dimen/dimens42"
                android:singleLine="true"
                android:id="@+id/edit_green"
                android:maxLength="6"
                android:inputType="number" />

            <TextView
                android:layout_width="@dimen/dimens80"
                android:layout_height="@dimen/dimens42"
                android:layout_marginLeft="@dimen/dimens10"
                android:background="@drawable/back_background"
                android:gravity="center"
                android:id="@+id/text_green"
                android:text="完成"
                android:textColor="@drawable/main_text_bg" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>