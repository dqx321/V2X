<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimens38"
    android:background="@color/common_black_alpha_cc">

    <ImageView
        android:id="@+id/left_btn"
        android:layout_width="@dimen/dimens60"
        android:layout_height="match_parent"
        android:background="@drawable/back_background"
        android:onClick="setBack"
        android:padding="@dimen/dimens7"
        android:src="@drawable/back_drawable" />


    <TextView
        android:id="@+id/top_centerText"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimens38"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text=""
        android:textColor="@color/white"
        android:textSize="@dimen/dimens18" />

    <TextView
        android:id="@+id/right_btn"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimens38"
        android:layout_alignParentRight="true"
        android:background="@drawable/back_background"
        android:gravity="center"
        android:onClick="offline"
        android:paddingLeft="@dimen/dimens10"
        android:paddingRight="@dimen/dimens10"
        android:text="离线地图"
        android:textColor="@drawable/main_text_bg"
        android:textSize="@dimen/dimens18"
        android:visibility="gone" />
</RelativeLayout>
