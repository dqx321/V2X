<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.offline.SettingActivity">

    <include layout="@layout/top_layout"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimens42"
                android:text="红灯时间："
                android:textColor="@color/red"
                android:textSize="@dimen/dimens25" />

            <EditText
                android:id="@+id/edit_red"
                android:layout_width="@dimen/dimens80"
                android:layout_height="@dimen/dimens42"
                android:inputType="number"
                android:maxLength="6"
                android:paddingRight="@dimen/dimens10"
                android:singleLine="true" />

            <TextView
                android:id="@+id/text_red"
                android:layout_width="@dimen/dimens80"
                android:layout_height="@dimen/dimens42"
                android:layout_marginLeft="@dimen/dimens10"
                android:background="@drawable/back_background"
                android:gravity="center"
                android:text="完成"
                android:textColor="@drawable/main_text_bg" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimens42"
                android:text="绿灯时间："
                android:textColor="@color/spring_green"
                android:textSize="@dimen/dimens25" />

            <EditText
                android:id="@+id/edit_green"
                android:layout_width="@dimen/dimens80"
                android:layout_height="@dimen/dimens42"
                android:inputType="number"
                android:maxLength="6"
                android:paddingRight="@dimen/dimens10"
                android:singleLine="true" />

            <TextView
                android:id="@+id/text_green"
                android:layout_width="@dimen/dimens80"
                android:layout_height="@dimen/dimens42"
                android:layout_marginLeft="@dimen/dimens10"
                android:background="@drawable/back_background"
                android:gravity="center"
                android:text="完成"
                android:textColor="@drawable/main_text_bg" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>