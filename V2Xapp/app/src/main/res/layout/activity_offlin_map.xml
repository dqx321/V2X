<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens38"
        android:background="@color/common_black_alpha_cc">

        <ImageView
            android:layout_width="@dimen/dimens60"
            android:layout_height="match_parent"
            android:onClick="back"
            android:padding="@dimen/dimens7"
            android:src="@drawable/back_drawable"
            android:background="@drawable/back_background"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimens38"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="离线地图"
            android:textColor="@color/white"
            android:textSize="@dimen/dimens18" />


    </RelativeLayout>

    <ListView
        android:id="@+id/city_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dimens40"
        android:layout_marginTop="@dimen/dimens38"
        android:cacheColorHint="#00000000"
        android:divider="#00000000"
        android:dividerHeight="0dp"
        android:listSelector="@android:color/transparent"
        android:scrollbars="none" />

    <com.intelligent.v2xapp.review.LetterListView
        android:id="@+id/letter_container"
        android:layout_width="22dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/dimens40"
        android:layout_marginTop="@dimen/dimens38" />

    <Button
        android:id="@+id/localcity"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens40"
        android:layout_alignParentBottom="true"
        android:background="@drawable/btn_green_selector"
        android:text="已下载城市"
        android:textColor="@color/white" />
</RelativeLayout>
